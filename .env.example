# ============================================================
# MAOF Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================

# Server
MAOF_PORT=3000
MAOF_HOST=0.0.0.0
MAOF_NODE_ENV=development
MAOF_LOG_LEVEL=debug

# PostgreSQL
MAOF_DB_HOST=localhost
MAOF_DB_PORT=5432
MAOF_DB_NAME=maof_dev
MAOF_DB_USER=maof
MAOF_DB_PASSWORD=maof_dev_password
MAOF_DB_POOL_MIN=2
MAOF_DB_POOL_MAX=20

# Redis
MAOF_REDIS_HOST=localhost
MAOF_REDIS_PORT=6379
MAOF_REDIS_PASSWORD=

# JWT (REQUIRED: minimum 32 characters for JWT_SECRET)
MAOF_JWT_SECRET=change-this-to-a-secure-random-secret-min-32-chars
MAOF_JWT_ACCESS_EXPIRES_IN=15m
MAOF_JWT_REFRESH_EXPIRES_IN=7d

# CORS (comma-separated origins)
MAOF_CORS_ORIGINS=http://localhost:5173
